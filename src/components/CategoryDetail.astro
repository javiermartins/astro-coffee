---
import Layout from "../layouts/Layout.astro";
import Card from "./Card.astro";

interface Props {
  categoryData: any;
  basePath: string;
}

const { categoryData, basePath } = Astro.props;
---

<Layout title={categoryData?.title}>
  <h2 class="mb-4 text-3xl tracking-tight font-extrabold">
    {categoryData?.title}
  </h2>
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
      categoryData?.data.map((detalle: any) => (
        <Card
          id={detalle.id}
          title={detalle.title}
          description={detalle.description}
          price={detalle.price}
          img={detalle.img}
          alergenos={detalle.alergenos}
          path={`/${basePath}/${categoryData.id}/${detalle.id}`}
        />
      ))
    }
  </div>
</Layout>
