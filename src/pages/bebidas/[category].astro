---
import CategoryDetail from "../../components/CategoryDetail.astro";
import bebidas from "../../data/bebidas.ts";

const { category } = Astro.params;

const categoryData = bebidas.find((item) => item.id === category);

export async function getStaticPaths() {
    return bebidas.map((item) => ({
        params: { category: item.id },
    }));
}
---

<CategoryDetail categoryData={categoryData} basePath="bebidas" />