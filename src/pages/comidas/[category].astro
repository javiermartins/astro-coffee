---
import CategoryDetail from "../../components/CategoryDetail.astro";
import comidas from "../../data/comidas.ts";

const { category } = Astro.params;

const categoryData = comidas.find((item) => item.id === category);

export async function getStaticPaths() {
  return comidas.map((item) => ({
    params: { category: item.id },
  }));
}
---

<CategoryDetail categoryData={categoryData} basePath="comidas" />
